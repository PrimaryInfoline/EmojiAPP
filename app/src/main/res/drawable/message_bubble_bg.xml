<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Тень -->
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#55000000" /> <!-- Полупрозрачная тень -->
            <corners android:radius="16dp" /> <!-- Округлые углы -->
        </shape>
    </item>

    <!-- Градиентный фон -->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <gradient
                android:startColor="@android:color/white"
                android:endColor="@android:color/darker_gray"
                android:angle="45" /> <!-- Градиент от белого к темно-серому -->
            <corners android:radius="16dp" /> <!-- Округлые углы -->
        </shape>
    </item>
</layer-list>
